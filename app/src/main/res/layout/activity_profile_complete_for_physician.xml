<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6ed9f"
    tools:context="com.dabinu.apps.recommender.Activities.ProfileCompleteForPhysician">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select your location"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/spinnerForLocation">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specializationLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select your specialization"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/spinnerForSpecialization">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/affiliationLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enter your affiliation"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:hint="e.g John Hopkins Hospital"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/editTextForAffiliation"
            android:layout_marginTop="20dp"
            android:background="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/licenseLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your license number"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:hint="\te.g \tOA13542"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/editTextForLicense"
            android:layout_marginTop="20dp"
            android:background="#ffffff"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="#ff4046"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Skip"
            android:textSize="23sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#0b8405"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Next"
            android:textSize="23sp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
