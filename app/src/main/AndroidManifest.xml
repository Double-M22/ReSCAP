<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dabinu.apps.recommender">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/backicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AuthClasses.LoginActivity" />
        <activity android:name=".AuthClasses.SignUpActivity" />
        <activity
            android:name=".Activities.HomeActivityPhysician"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.ProfileCompleteForPhysician" />
        <activity
            android:name=".Activities.HomeActivityPatient"
            android:label="@string/title_activity_home_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.HomeActivityCaregiver"
            android:label="@string/title_activity_home_caregiver"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.ProfileCompleteForPatient" />
        <activity android:name=".Activities.ProfileCompleteForCaregiver" />
    </application>

</manifest>